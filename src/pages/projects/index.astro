---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import { SITE } from "@config";
import { Icon } from "astro-icon/components";
import { ALL_PROJECTS } from "./projects";
---

<Layout title={`Projects | ${SITE.title}`}>
  <Header activeNav="projects" />
  <Main pageTitle="Projects" pageDesc="All projects.">
    <div class="mt-4">
      {
        ALL_PROJECTS.map(item => (
          <>
            <h3 class="mb-2 text-lg font-bold">{item.year}</h3>
            <ul class="mb-6 ml-4 list-inside list-disc">
              {item.projects.map((project, pIndex) => {
                return (
                  <li class="mb-6" id={`${pIndex}`}>
                    {project.active ? (
                      <a
                        href={project.url}
                        target="_blank"
                        rel="noopener noreferrer nofollow"
                        class="break-words underline decoration-dashed underline-offset-8 hover:text-skin-accent"
                      >
                        {project.title}
                      </a>
                    ) : (
                      <span class="break-words underline decoration-dashed underline-offset-8">
                        {project.title}
                      </span>
                    )}

                    {project.description && (
                      <div
                        class="mb-2 ml-4 mt-4 block font-thin"
                        set:html={project.description}
                      />
                    )}

                    {project.stacks && (
                      <div class="mt-5 ml-4 flex items-center">
                        <p>Tecnologies: </p>
                        <div class="flex flex-wrap items-center">
                          {project.stacks.length &&
                            project.stacks.map(stackIcon => {
                              return (
                                <Icon
                                  class="iconify my-2 lg:my-0 mx-4"
                                  title={stackIcon}
                                  name={stackIcon}
                                />
                              );
                            })}
                        </div>
                      </div>
                    )}

                    {project.img && (
                      <a
                        href={project.url}
                        target="_blank"
                        rel="noopener noreferrer nofollow"
                        class="mt-6 mb-2 block break-words underline decoration-dashed underline-offset-8 hover:text-skin-accent"
                      >
                        <picture class="m-0 rounded-sm">
                          <img
                            class="h-auto w-full"
                            src={`/${project.img}`}
                            alt={project.title}
                          />
                        </picture>
                      </a>
                    )}
                  </li>
                );
              })}
            </ul>
          </>
        ))
      }
    </div>
  </Main>
  <Footer />
</Layout>
